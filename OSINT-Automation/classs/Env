import os
from dotenv import load_dotenv

class Env:
    def __init__(self):
        self.path = os.path.join(os.path.dirname(__file__), ".env")
        load_dotenv(self.path)

    def get_var(self, var_name):
        return os.getenv(var_name)

env = Env()
api_key = env.get_var("API_KEY")
print(api_key)
